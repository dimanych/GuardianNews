<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/revolver</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/brightTurquoise</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textAppearance">@style/RobotoFont</item>

    </style>

    <style name="ImageAltTheme">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/nobel</item>
    </style>

    <style name="CapitalTextTheme">
        <item name="android:textSize">@dimen/text_capital</item>
        <item name="android:textColor">@color/turquoiseBlue</item>
    </style>

    <style name="RobotoFont" parent="android:TextAppearance">
        <item name="fontPath">fonts/robotolight.ttf</item>
    </style>
</resources>
